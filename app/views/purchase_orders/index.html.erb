<h1>Listing purchase_orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Amount</th>
      <th>Discount</th>
      <th>Paid amount</th>
      <th>Balance</th>
      <th>Purchase date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.customer.name %></td>
        <td><%= purchase_order.product.name %></td>
        <td><%= purchase_order.quantity %></td>
        <td><%= purchase_order.amount %></td>
        <td><%= purchase_order.discount %></td>
        <td><%= purchase_order.paid_amount %></td>
        <td><%= purchase_order.balance %></td>
        <td><%= purchase_order.purchase_date %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase order', new_purchase_order_path %>
